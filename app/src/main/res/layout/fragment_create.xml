<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CreateFragment"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:background="@drawable/gradient_background"
            android:paddingHorizontal="25dp"
            android:paddingBottom="15dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:letterSpacing=".05"
                android:text="Outfit Styling"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/font"
                android:textSize="26sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/outfitLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/filtersImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_tune_24"
                android:scaleType="fitCenter"
                android:padding="12dp"
                android:background="@drawable/rounded_border_left"
                android:layout_marginBottom="10dp" />

            <ImageButton
                android:id="@+id/generateButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/baseline_casino_24"
                android:scaleType="fitCenter"
                android:padding="12dp"
                android:background="@drawable/rounded_border"
                android:layout_marginBottom="10dp" />

            <ImageButton
                android:id="@+id/saveButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_favorite_24"
                android:scaleType="fitCenter"
                android:padding="12dp"
                android:background="@drawable/rounded_border_right"
                android:layout_marginBottom="10dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
