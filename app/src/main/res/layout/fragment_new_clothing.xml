<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewClothingFragment"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="25dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Clothing"
        android:textSize="24sp"
        android:textColor="@color/font"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image"
        android:textSize="16sp"
        android:textColor="@color/font"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/addImageButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_image_search_24"
            android:background="@drawable/rounded_border"
            android:scaleType="centerCrop"
            android:padding="100dp"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="16sp"
        android:textColor="@color/font"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:hint="Pants"
        android:textColor="@color/font"
        android:textColorHint="@color/fontThin"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Type"
        android:textSize="16sp"
        android:textColor="@color/font"
        android:layout_marginBottom="5dp"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="25dp"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Headwear"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:background="@drawable/rounded_border"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tops"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:background="@drawable/rounded_border"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bottoms"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:background="@drawable/rounded_border"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Footwear"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:background="@drawable/rounded_border"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_marginRight="5dp"
                />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tags"
        android:textSize="16sp"
        android:textColor="@color/font"
        android:layout_marginBottom="5dp"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="25dp"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T-Shirt"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:background="@drawable/rounded_border"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pants"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:background="@drawable/rounded_border"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vintage"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:background="@drawable/rounded_border"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jeans"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:background="@drawable/rounded_border"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoes"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:background="@drawable/rounded_border"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tag"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:background="@drawable/rounded_border"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>
    </HorizontalScrollView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addClothingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:text="Add New Clothing"
    android:textAllCaps="false"
        android:textColor="@color/font"
        />


</LinearLayout>